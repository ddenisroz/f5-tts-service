# ======================================================================
# F5_tts production template
# Copy to .env and fill with real values before deployment.
# ======================================================================

ENVIRONMENT=production
TTS_DEBUG=false
TTS_LOG_LEVEL=INFO
LOG_LEVEL=INFO

# Must match bot_service signing setup (or use dedicated internal JWT secret).
SECRET_KEY=replace-with-strong-secret-32+-chars
ALGORITHM=HS256

# Internal auth (recommended primary mode: service JWT)
INTERNAL_SERVICE_JWT_SECRET=replace-with-internal-jwt-secret
INTERNAL_SERVICE_JWT_ISSUER=bot_service
INTERNAL_SERVICE_JWT_AUDIENCE=f5_tts
INTERNAL_SERVICE_JWT_ALLOWED_SUBJECTS=bot_service

# Temporary compatibility fallback (optional)
TTS_INTERNAL_API_KEY=

TTS_HOST=0.0.0.0
TTS_PORT=8001

# PostgreSQL
POSTGRES_USER=f5_tts_user
POSTGRES_PASSWORD=replace-with-strong-db-password
POSTGRES_DB=f5_tts_db
DATABASE_URL=postgresql://f5_tts_user:replace-with-strong-db-password@postgres:5432/f5_tts_db

# Redis (advanced profile only)
REDIS_PASSWORD=replace-with-strong-redis-password
REDIS_URL=redis://:replace-with-strong-redis-password@redis:6379/0
GPU_REDIS_URL=redis://:replace-with-strong-redis-password@redis:6379/0

# CORS: include only trusted origins
CORS_ORIGINS=https://your-frontend.example.com

# Optional
HUGGINGFACE_TOKEN=
TTS_CFG_STRENGTH=2.5
DISABLE_TRANSCRIPTION=false

